extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Welcome to my portfolio!

      p.lead.text-light
        | Here are some of my completed projects. Each project has a link to the live demo as well as the GitHub repository.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
 
      each project, index in projects
        .cell
          a(href=`${index}`)
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5= project.project_name
      
